int main(){  //main program to run (logic)
    intro(5, "bob");
    if(1 == introChoice){
        middle1();
        if(middleChoice1 == 1){
            end1();
        }
        if(middleChoice1 == 2){
            end2();
        }
        if(middleChoice1 == 3){
            end3();
        }
    }
    if(2 == introChoice){
        middle2();
        if(middleChoice1 == 1){
            end4();
        }
        if(middleChoice1 == 2){
            end5();
        }
        if(middleChoice1 == 3){
            end6();
        }
    }
    if(3 == introChoice){
        middle2();
        if(middleChoice1 == 1){
            end7();
        }
        if(middleChoice1 == 2){
            end8();
        }
        if(middleChoice1 == 3){
            end9();
        }
    }
}
